---
import Logo from '@/components/Logo.astro';
import { CONFIG, FOOTER, markdownify } from '@/shared';

const { footer, copyright, copyrightDeveloper } = CONFIG;
---

<footer class="section bg-theme-light py-6 mt-8">
    <div class="container">
        {/* footer menu */}
        <div class="row mb-4">
            {
                FOOTER.map((menu) => {
                    return (
                        <div class="sm:col-6 lg:col-3">
                            <h2 class="h4" set:html={markdownify(menu.name)} />
                            <ul class="mt-6">
                                {menu?.children?.map((item) => (
                                    <li class="mb-1">
                                        <a href={item.url} rel={item.name}>
                                            {item.name}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    );
                })
            }
            {/* social icons */}
            <div class="md-12 sm:col-6 lg:col-6 text-center flex flex-col items-center">
                <Logo isNavbar={false} />
                <p class="mt-3 mb-6" set:html={markdownify(footer)} />
                <!-- <Social source={social} className="social-icons mb-8" /> -->
            </div>
        </div>
        {/* copyright */}
        <div class="border-t border-border pt-3">
            <p class="text-center" set:html={markdownify(copyright)} />
            <p class="text-sm text-center" set:html={markdownify(copyrightDeveloper)} />
        </div>
    </div>
</footer>
