---
import Meta from '@/layouts/partials/Meta.astro';
import { CONFIG } from '@/shared';
import '@styles/main.scss';
import Footer from './partials/Footer.astro';
import Header from './partials/Header.astro';

// types for frontmatters
export interface Props {
    lang?: string;
    title?: string;
    noindex?: boolean;
}

// distructure frontmatters
const { whatsappLink } = CONFIG;
const { title, lang = 'en' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <Meta />
        <!-- title -->
        <title>
            Conservice {title ? `- ${title}` : ''}
        </title>
    </head>
    <body>
        <Header />
        <main id="main-content" class="min-h-screen">
            <slot />
        </main>
        <Footer />
        <div class="relative">
            <a
                href={whatsappLink}
                target="_blank"
                class="z-20 flex flex-col shrink-0 grow-0 justify-around fixed bottom-0 right-0 rounded-lg mr-1 mb-5">
                <div class="align-center bg-green-500 border-4 border-white flex h-[60px] justify-center rounded-full text-white w-[60px]">
                    <img src="/img/icons/whatsapp.svg" alt="" class="w-2/4" />
                </div>
            </a>
        </div>
    </body>
</html>
