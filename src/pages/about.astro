---
import Layout from '@/layouts/Layout.astro';
import { markdownify } from '@/shared';
import { getEntryBySlug } from 'astro:content';

const about = await getEntryBySlug('about', 'index');
const { Content } = await about.render();

const vision = await getEntryBySlug('about', 'vision');
const visionRender = await vision.render();
---

<Layout title="Acerca de Conservice">
    <!-- about us -->
    <section class="pt-[70px]">
        <div class="container">
            <div class="col-12 mb-5">
                <span class="text-lg text-text">{markdownify(about!.data.title)}</span>
                <h2>{markdownify(about!.data.subtitle)}</h2>
                <div class="mt-3 border-b-2 w-2/4"></div>
            </div>
            <div class="content">
                <Content />
            </div>
        </div>
    </section>
    <section class="pt-[70px]">
        <div class="container">
            <div class="col-12 mb-5">
                <span class="text-lg text-text">{markdownify(vision!.data.title)}</span>
                <h2>{markdownify(vision!.data.subtitle)}</h2>
                <div class="mt-3 border-b-2 w-2/4"></div>
            </div>
            <div class="row">
                <div class="sm:col-12 lg:col-8 2xl:col-7 content">
                    <visionRender.Content />
                </div>
                <div class="sm:col-12 lg:col-4 2xl:col-5">
                    <img src={vision!.data.icon} alt="conservice" class="shadow img-blur-shadow rounded-lg" />
                </div>
            </div>
        </div>
    </section>
</Layout>
