---
import Layout from '@/layouts/Layout.astro';
import { markdownify } from '@/shared';
import { getEntryBySlug } from 'astro:content';

const home = await getEntryBySlug('home', 'index');
const { services } = home.data;
---

<Layout title="Nuestros Servicios">
    <!-- services -->
    <section class="pt-[70px] bg-theme-light mb-10">
        <div class="container">
            <div class="text-center lg:pb-11">
                <h2>{markdownify(services!.title)}</h2>
            </div>
            {
                services!.features.map((item: any, i: number) => (
                    <div class="mt-8 row border-y-2 rounded-3xl bg-white text-center shadow-md mb-9" class:list={[i%2==0 ? 'flex-row-reverse' : '']}>
                        <div class={ `col-2 rounded-3xl px-0`} >
                            <img src={item.icon} alt="" class="img-blur-shadow shadow w-full h-full rounded-3xl" />
                        </div>
                        <div class="col-10 py-6 px-12">
                            <p class="h4" set:html={markdownify(item!.name)} />
                            <p class="h6" set:html={markdownify(item!.category)} />
                            <p class="mt-3">{item.content}</p>
                        </div>
                    </div>
                    ))
                }
        </div>
    </section>

</Layout>
